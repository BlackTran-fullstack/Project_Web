            </li>
            <li>
                <a href="/about" class="nav-item" data-page="about">About</a>
            </li>
            <li>
                <a
                    href="/contact"
                    class="nav-item"
                    data-page="contact"
                >Contact</a>
            </li>
        </ul>

        <div class="navbar-icons">
            {{#if user}}
                <div class="profile-dropdown">
                    <i class="fa-solid fa-user" onclick="toggleRes()"></i>

                    <ul
                        id="user-dropdown"
                        class="dropdown-menu profile-dropdown-list"
                    >

<div id="search">
    <div class="search-form">
        <form class="form-display" method="GET" action="/search">
            <div>
                <label for="search-input" class="form-label"></label>
                <input type="text" name="q" class="form-control" id="search-input" placeholder="Search the item (Name, Descripton...)" list="suggestions">
                <datalist id="suggestions">
                    <option value="Sofa">
                    <option value="Chair">
                    <option value="Table">
                    <option value="Bed">
                    <option value="Desk">
                </datalist>
            </div>
            <button type="submit" class="btn-search">Search</button>
        </form>
    </div>

    <div class="products">
        <div class="products-content">
            <ul class="list-products">
                {{#each products}}
                    <li class="product">
                        <div class="product-card">
                            <a href="#!" class="product-btn">
                                <img
                                    src="{{this.imagePath}}"
                                    alt="{{this.name}}"
                                    class="product-image"
                                />

                                <div class="product-info">
                                    <h3 class="product-name">{{this.name}}</h3>

                                    <p
                                        class="product-desc"
                                    >{{this.description}}</p>

                                    <p
                                        class="product-price"
                                        data-price="{{this.price}}"
                                    >{{this.price}}</p>

                                    <div class="rating_stock">
                                        <p
                                            class="product-rating"
                                            data-rating="{{this.rating}}"
                                            >{{this.rate}} 
                                            <img src="/img/star_full.svg"/> 
                                        </p>

                                        <p
                                            class="product-stock"
                                            data-stock="{{this.stock}}"
                                            >
                                            {{this.stock}} in stock
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <div class="product-hover">
                            <div class="product-actions">
                                <a
                                    href="/shop/{{this.slug}}"
                                    class="button cart-btn"
                                >View details</a>

                                <div class="actions">
                                    <a href="#!" class="action share">
                                        <img src="/img/share.svg" alt="" />
                                        <p class="action-name">Share</p>
                                    </a>

                                    <a href="#!" class="action compare">
                                        <img src="/img/compare.svg" alt="" />
                                        <p class="action-name">Compare</p>
                                    </a>

                                    <a href="#!" class="action like">
                                        <img src="/img/like.svg" alt="" />
                                        <p class="action-name">Like</p>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <!-- Nút Show All Result -->
    {{#if showAll}}
        <!-- Nếu đang hiển thị tất cả thì không hiển thị nút -->
    {{else}}
        <div class="show-all">
            <form method="GET" action="/search">
                <input type="hidden" name="q" value="{{q}}" />
                <input type="hidden" name="showAll" value="true" />
                <button type="submit" class="btn-show-all">Show All Result</button>
            </form>
        </div>
    {{/if}}
</div>


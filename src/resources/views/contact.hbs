<main id="contact">
    <div class="shop-header">
        <div class="shop-introduce">
            <h1 class="shop-title">Contact</h1>
            <div class="shop-breadcrumb">
                <a href="/">Home</a>
                <img src="/img/arrow_right.svg" alt="" /> 
                <p>Contact</p>
            </div>
        </div>
    </div>

    <div class="contact-page">
        <div class="contact-header">
            <h2 class="contact-title">Get In Touch With Us</h2>
            <p class="contact-description">
                For More Information About Our Product & Services, Please Feel Free To Drop Us An Email. 
                Our Staff Will Always Be There To Help You Out. Do Not Hesitate!
            </p>
        </div>

        <div class="contact-content">
            <!-- Contact Info -->
            <div class="contact-info">
                <div class="info-item">
                    <img src="/img/location.svg" alt="location" class="info-icon" />
                    <div>
                        <h3 class="info-title">Address</h3>
                        <p class="info-text">
                            236 5th SE Avenue, New York NY10000, United States
                        </p>
                    </div>
                </div>

                <div class="info-item">
                    <img src="/img/phone.svg" alt="phone" class="info-icon" />
                    <div>
                        <h3 class="info-title">Phone</h3>
                        <p class="info-text">Mobile: +(84) 546-6789</p>
                        <p class="info-text">Hotline: +(84) 456-6789</p>
                    </div>
                </div>

                <div class="info-item">
                    <img src="/img/clock.svg" alt="clock" class="info-icon" />
                    <div>
                        <h3 class="info-title">Working Time</h3>
                        <p class="info-text">Monday-Friday: 9:00 - 22:00</p>
                        <p class="info-text">Saturday-Sunday: 9:00 - 21:00</p>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="contact-form">
                <form action="" class="form">
                    <label for="name" class="form-label">Your Name</label>
                    <input
                        id="name"
                        type="text"
                        placeholder="Abc"
                        class="form-input"
                    />

                    <label for="email" class="form-label">Email Address</label>
                    <input
                        id="email"
                        type="email"
                        placeholder="Abc@def.com"
                        class="form-input"
                    />

                    <label for="subject" class="form-label">Subject</label>
                    <input
                        id="subject"
                        type="text"
                        placeholder="This is optional"
                        class="form-input"
                    />

                    <label for="message" class="form-label">Message</label>
                    <textarea
                        id="message"
                        cols="30"
                        rows="5"
                        placeholder="Hi! I'd like to ask about"
                        class="form-textarea"
                    ></textarea>

                    <button type="submit" class="form-button">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <div class="shop-services">
        <div class="services-content">
            <div class="service">
                <img src="/img/trophy_icon.svg" alt="" class="service-icon" />
                <div class="service-info">
                    <h3>High Quality</h3>
                    <p>crafted from top materials</p>
                </div>
            </div>
            <div class="service">
                <img src="/img/warranty_icon.svg" alt="" class="service-icon" />
                <div class="service-info">
                    <h3>Warranty Protection</h3>
                    <p>Over 2 years</p>
                </div>
            </div>
            <div class="service">
                <img src="/img/shipping_icon.svg" alt="" class="service-icon" />
                <div class="service-info">
                    <h3>Free Shipping</h3>
                    <p>Order over 150 $</p>
                </div>
            </div>
            <div class="service">
                <img src="/img/support_icon.svg" alt="" class="service-icon" />
                <div class="service-info">
                    <h3>24 / 7 Support</h3>
                    <p>Dedicated support</p>
                </div>
            </div>
        </div>
    </div>
</main>